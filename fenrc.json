{
	"ui-borders": false,
	"no-mouse": false,
	"no-write": false,
	"dont-show-hidden-files": true,
	"folders-not-first": false,
	"print-path-on-open": false,
	"dont-change-terminal-title": false,
	"dont-show-help-text": false,

	"open-with": [
		{
			"programs": ["mpv", "vlc"],
			"match": [
				"*.mp4", "*.webm", "*.mkv", "*.mov", "*.avi", "*.flv",
				"*.wav", "*.flac", "*.mp3", "*.ogg", "*.m4a"
			]
		},
		{
			"programs": ["xviewer", "xdg-open", "feh"],
			"match": ["*.png", "*.jpg", "*.jpeg", "*.jfif", "*.flif", "*.tiff", "*.gif", "*.webp", "*.bmp"]
		},
		{
			"programs": ["nvim -p", "vim -p", "vi -p"],
			"match": ["*"],
			"do-not-match": ["*.mod"]
		}
	],

	"preview-with": [
		{
			"script": "FEN_CONFIG_PATH/rainbow.lua",
			"match": ["*"],
			"do-not-match": ["*.png", "*.exe"]
		}
	]
}
